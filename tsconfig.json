{
  "exclude": [
    "node_modules",
    "dist"
  ],
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2015",
    "noImplicitAny": true,
    "declaration": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "dist",
    "lib": [
      "es2018",
      "dom"
    ],
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  }
}